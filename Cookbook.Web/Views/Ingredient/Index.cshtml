@model IEnumerable<Cookbook.Web.Ingredient>


@{
    ViewBag.Title = "Index";
}

<h2>Liste des recettes</h2>

<table>
    <thead>
        <tr>
            <td>#</td>
            <td>Nom</td>
            <td>Description</td>
        </tr>
    </thead>
    <tbody>

        @*@Html.ActionLink("Créer", "Create", "Recipe", null, null)*@

        @foreach (var ingredient in Model)
        {
            <tr>
                <td>@ingredient.Id</td>
                <td>@ingredient.Name</td>
                <td>@ingredient.Unit.LongName</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="5">
               @* @Model.Count() recette@(Model.Count() > 1 ? "s" : string.Empty)*@
            </td>
        </tr>
    </tfoot>
</table>

