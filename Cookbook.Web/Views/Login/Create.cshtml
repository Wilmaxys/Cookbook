@model Cookbook.Web.Models.Login.ApplicationUserModel

@{
    ViewBag.Title = "Create";
}

<h2 class="page-header">Création d'utilisateur</h2>


@using (Html.BeginForm("SaveUser", "Login"))
{

    <div class="row form-group">
        @Html.LabelFor(obj => obj.Email, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(obj => obj.Email, new { @class = "form-control col-sm-10" })
        @Html.ValidationMessageFor(obj => obj.Email)
    </div>
    <div class="row form-group">
        @Html.LabelFor(obj => obj.FirstName, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(obj => obj.FirstName, new { @class = "form-control col-sm-10" })
        @Html.ValidationMessageFor(obj => obj.FirstName)

    </div>
    <div class="row form-group">
        @Html.LabelFor(obj => obj.LastName, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(obj => obj.LastName, new { @class = "form-control col-sm-10" })
        @Html.ValidationMessageFor(obj => obj.LastName)

    </div>
    <div class="row form-group">
        @Html.LabelFor(obj => obj.Password, new { @class = "control-label col-sm-2" })
        @Html.PasswordFor(obj => obj.Password, new { @class = "form-control col-sm-10" })
        @Html.ValidationMessageFor(obj => obj.Password)

    </div>

    @Html.HiddenFor(obj => obj.ApplicationUserId)

    <div class="row">
        <div class="col-sm-12">
            <input type="submit" value="Sauvergader" class="btn btn-success"/>
        </div>
    </div>
}




